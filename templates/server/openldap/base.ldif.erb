userPassword: <%= rootpw %>

dn: ou=Users,<%= basedn %>
ou: Users
objectClass: organizationalUnit
objectClass: top
description: Users subtree

dn: ou=Groups,<%= basedn %>
ou: Groups
objectClass: organizationalUnit
objectClass: top
description: Tenants for keystone

dn: ou=Roles,<%= basedn %>
ou: Roles
objectClass: organizationalUnit
objectClass: top
description: Roles for keystone

dn: ou=Domains,<%= basedn %>
ou: Domains
objectClass: organizationalUnit
objectClass: top
description: needed by Grizzly

dn: cn=default,ou=Domains,<%= basedn %>
